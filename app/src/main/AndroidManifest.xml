<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.ComposeBasic"
        tools:targetApi="31">
        <activity
            android:name=".ComposeUIFloatingActionButton"
            android:exported="false"
            android:label="@string/title_activity_compose_uifloating_action_button"
            android:theme="@style/Theme.ComposeBasic" />
        <activity
            android:name=".ComposeUIBotton"
            android:exported="false"
            android:label="@string/title_activity_compose_uibotton"
            android:theme="@style/Theme.ComposeBasic" />
        <activity
            android:name=".ComposeUICard"
            android:exported="false"
            android:label="@string/title_activity_compose_uicard"
            android:theme="@style/Theme.ComposeBasic" />
        <activity
            android:name=".ComposeUIText"
            android:exported="false"
            android:label="@string/title_activity_compose_uitext"
            android:theme="@style/Theme.ComposeBasic" />
        <activity
            android:name=".ComposeUIBoxWithConstraints"
            android:exported="false"
            android:label="@string/title_activity_compose_uibox_with_constraints"
            android:theme="@style/Theme.ComposeBasic" />
        <activity
            android:name=".ComposeUIBox"
            android:exported="false"
            android:label="@string/title_activity_compose_uibox"
            android:theme="@style/Theme.ComposeBasic" />
        <activity
            android:name=".ComposeUIColumn"
            android:exported="false"
            android:label="@string/title_activity_compose_uicolumn"
            android:theme="@style/Theme.ComposeBasic" />
        <activity
            android:name=".ComposeUIRow"
            android:exported="true"
            android:label="@string/title_activity_compose_uirow"
            android:theme="@style/Theme.ComposeBasic">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ComposeUILazyColumn"
            android:exported="true"
            android:label="@string/title_activity_lazy_column"
            android:theme="@style/Theme.ComposeBasic" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.ComposeBasic" />
    </application>

</manifest>